   # 穿山甲
#   pod 'UBiXMCSJAdapter', '7.4.0.1.0'
   # 优量汇
   pod 'UBiXMGdtAdapter', '4.15.75.0'
#   pod 'GDTMobSDK', '4.15.75'
   # 快手
   pod 'UBiXMKSAdapter', '4.12.20.1.0'
#   pod 'KSAdSDK', '4.12.20.1'
   # 百度
   pod 'UBiXMBaiduAdapter', '10.032.0'
#   pod 'BaiduMobAdSDK', '10.032'
   # 京东
   pod 'UBiXMJDAdapter', '2.6.8.4'
#   pod 'JADYun', '2.6.8'
#   pod 'JADYunMotion', '2.6.8'
  # 天璇
